<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" 
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" 
			size="10" 
			default="0"
			readonly="true"
			class="readonly"
		/>

		<field name="codigo" 
			type="text"
			label="Codigo" 
			description="codigo"
			class="inputbox" 
			size="30" 
			required="true"
		 />

		 <field name="detalle" 
			type="text"
			label="Detalle" 
			description="detalle"
			class="inputbox" 
			size="30" 
			required="true"
		 />

		 <field name="precio" 
			type="text"
			label="Precio" 
			description="Precio"
			class="inputbox" 
			size="30" 
			required="true"
		 />
				
		<field name="published" type="radio" label="JPUBLISHED"
			description="JFIELD_PUBLISHED_DESC" class="inputbox"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				JYES</option>
			<option value="0">
				JNO</option>			
		</field>		

		<field name="checked_out" 
			type="hidden" 
			filter="unset" 
		/>

		<field name="checked_out_time" 
			type="hidden" 
			filter="unset"
		 />

		<field name="ordering" 
			type="ordering" 
			class="inputbox"
			label="JFIELD_ORDERING_LABEL" 
			description="JFIELD_ORDERING_DESC" 
		/>	
		
	</fieldset>
	
</form>